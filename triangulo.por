programa
{
	
	funcao inicio()
	{
		inteiro valor
		escreva("Digite um valor: \n")
		leia(valor)

		para(inteiro contador = 0; contador <= valor; contador++){
			para(inteiro linha = 1; linha <= contador; linha++){
				escreva("*")
			}
			     escreva("\n")
			
		}
	}
}
